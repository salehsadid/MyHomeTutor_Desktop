<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" style="-fx-padding: 20; -fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myhometutor.controller.ReportDialogController">
    
    <Label text="Report User/Content" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <Label text="Please describe the reason for your report:" wrapText="true"/>
    
    <TextArea fx:id="reasonArea" prefRowCount="5" wrapText="true" promptText="Enter details here..."/>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" style="-fx-background-color: #e0e0e0;"/>
        <Button text="Submit Report" onAction="#handleSubmit" style="-fx-background-color: #ff6b6b; -fx-text-fill: white;"/>
    </HBox>
    
</VBox>
