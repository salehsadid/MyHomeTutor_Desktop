<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="root-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myhometutor.controller.AdminTuitionPostListController">
    
    <left>
        <VBox spacing="10" styleClass="admin-sidebar">
            <Label text="Admin Panel" styleClass="sidebar-title">
                <font>
                    <Font name="System Bold" size="20" />
                </font>
                <VBox.margin>
                    <Insets bottom="20" />
                </VBox.margin>
            </Label>
            
            <Button text="Dashboard" onAction="#handleDashboard" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="Connections" onAction="#handleConnections" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="Tutors" onAction="#handleTutors" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="Students" onAction="#handleStudents" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="Tuition Posts" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="Reports" onAction="#handleReports" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="Banned Users" onAction="#handleBannedUsers" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="sidebar-button" style="-fx-text-fill: #ff6b6b;" maxWidth="Infinity">
                <VBox.margin>
                    <Insets top="50" />
                </VBox.margin>
            </Button>
        </VBox>
    </left>
    
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <HBox alignment="CENTER_LEFT">
                <Label text="Tuition Posts Management" styleClass="page-title">
                    <font>
                        <Font name="System Bold" size="24" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <ToggleButton fx:id="themeToggle" onAction="#handleThemeToggle" styleClass="theme-toggle" />
            </HBox>
            
            <HBox spacing="10">
                <Button text="All Posts" onAction="#handleFilterAll" styleClass="primary-button"/>
                <Button text="Pending Posts" onAction="#handleFilterPending" styleClass="primary-button"/>
                <Button text="Approved Posts" onAction="#handleFilterApproved" styleClass="primary-button"/>
            </HBox>
            
            <TableView fx:id="postsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="studentNameColumn" text="Student Name" prefWidth="150"/>
                    <TableColumn fx:id="subjectColumn" text="Subject" prefWidth="150"/>
                    <TableColumn fx:id="classColumn" text="Class" prefWidth="100"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="actionColumn" text="Action" prefWidth="100"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
    
</BorderPane>