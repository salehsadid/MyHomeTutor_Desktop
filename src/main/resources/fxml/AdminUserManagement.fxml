<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="root-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myhometutor.controller.AdminUserManagementController">
    
    <left>
        <VBox spacing="10" styleClass="admin-sidebar">
            <Label text="Admin Panel" styleClass="sidebar-title">
                <font>
                    <Font name="System Bold" size="20" />
                </font>
                <VBox.margin>
                    <Insets bottom="20" />
                </VBox.margin>
            </Label>
            
            <Button text="Dashboard" onAction="#handleDashboard" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="User Management" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="Tuition Posts" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="Reports" styleClass="sidebar-button" maxWidth="Infinity"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="sidebar-button" style="-fx-text-fill: #ff6b6b;" maxWidth="Infinity">
                <VBox.margin>
                    <Insets top="50" />
                </VBox.margin>
            </Button>
        </VBox>
    </left>
    
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <Label text="User Management" styleClass="page-title">
                <font>
                    <Font name="System Bold" size="24" />
                </font>
            </Label>
            
            <HBox spacing="10">
                <Button text="All Users" onAction="#handleFilterAll" styleClass="primary-button"/>
                <Button text="Pending Tutors" onAction="#handleFilterPending" styleClass="primary-button"/>
            </HBox>
            
            <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="actionColumn" text="Action" prefWidth="150"/>
                </columns>
            </TableView>
            
        </VBox>
    </center>
    
</BorderPane>