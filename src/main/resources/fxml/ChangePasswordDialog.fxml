<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="350" prefWidth="400" spacing="20" styleClass="root-container" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myhometutor.controller.ChangePasswordController">
    <padding>
        <Insets bottom="25" left="30" right="30" top="25" />
    </padding>
    
    <Label styleClass="page-title" text="Change Password">
        <font>
            <Font name="System Bold" size="22" />
        </font>
    </Label>
    
    <VBox spacing="15" styleClass="form-container">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
        
        <VBox spacing="8">
            <Label styleClass="field-label" text="Current Password" />
            <HBox spacing="5" alignment="CENTER_LEFT">
                <StackPane HBox.hgrow="ALWAYS">
                    <TextField fx:id="currentPasswordText" visible="false" styleClass="custom-text-field" />
                    <PasswordField fx:id="currentPasswordField" styleClass="password-field" />
                </StackPane>
                <Button fx:id="toggleCurrentBtn" text="ðŸ‘" onAction="#toggleCurrentPassword" styleClass="icon-button" />
            </HBox>
        </VBox>
        
        <VBox spacing="8">
            <Label styleClass="field-label" text="New Password" />
            <HBox spacing="5" alignment="CENTER_LEFT">
                <StackPane HBox.hgrow="ALWAYS">
                    <TextField fx:id="newPasswordText" visible="false" styleClass="custom-text-field" />
                    <PasswordField fx:id="newPasswordField" styleClass="password-field" />
                </StackPane>
                <Button fx:id="toggleNewBtn" text="ðŸ‘" onAction="#toggleNewPassword" styleClass="icon-button" />
            </HBox>
        </VBox>
        
        <VBox spacing="8">
            <Label styleClass="field-label" text="Confirm New Password" />
            <HBox spacing="5" alignment="CENTER_LEFT">
                <StackPane HBox.hgrow="ALWAYS">
                    <TextField fx:id="confirmPasswordText" visible="false" styleClass="custom-text-field" />
                    <PasswordField fx:id="confirmPasswordField" styleClass="password-field" />
                </StackPane>
                <Button fx:id="toggleConfirmBtn" text="ðŸ‘" onAction="#toggleConfirmPassword" styleClass="icon-button" />
            </HBox>
        </VBox>
    </VBox>
    
    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="cancelButton" onAction="#handleCancel" styleClass="secondary-button" text="Cancel" />
        <Button fx:id="saveButton" onAction="#handleSave" styleClass="primary-button" text="Update Password" />
    </HBox>
</VBox>